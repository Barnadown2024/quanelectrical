---
interface Props {
	siteTitle: string;
	phone: string;
	email: string;
}

const { siteTitle, phone, email } = Astro.props;

const navLinks = [
	{ href: '/', label: 'Home' },
	{ href: '/services', label: 'Services' },
	{ href: '/projects', label: 'Projects' },
	{ href: '/about', label: 'About' },
	{ href: '/faqs', label: 'FAQs' },
	{ href: '/contact', label: 'Contact' },
];
---

<header class="sticky top-0 z-50 border-b border-slate-200/80 bg-stone-50/95 backdrop-blur-md">
	<div class="mx-auto flex max-w-7xl flex-wrap items-center justify-between gap-4 px-4 py-4 sm:px-6 lg:px-8">
		<a href="/" class="font-heading text-xl font-bold tracking-tight text-slate-900 transition hover:text-amber-600">
			{siteTitle}
		</a>

		<nav class="flex flex-wrap items-center gap-1 sm:gap-2" aria-label="Main">
			{navLinks.map((link) => (
				<a
					href={link.href}
					class="rounded-lg px-3 py-2 text-sm font-medium text-slate-600 transition hover:bg-slate-100 hover:text-slate-900"
				>
					{link.label}
				</a>
			))}
		</nav>

		<div class="flex items-center gap-3 text-sm">
			{phone && (
				<a href={`tel:${phone.replace(/\s/g, '')}`} class="rounded-lg px-3 py-2 font-medium text-slate-600 transition hover:bg-amber-50 hover:text-amber-700">
					{phone}
				</a>
			)}
			<a href="/contact" class="rounded-lg bg-amber-500 px-4 py-2 font-semibold text-slate-900 shadow-sm transition hover:bg-amber-400">
				Get a quote
			</a>
		</div>
	</div>
</header>
